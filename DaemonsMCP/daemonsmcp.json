{
    "version": "1.0",
    "daemon": {
        "name": "DaemonMCP",
        "version": "1.0.0"
    },
    "projects": [
        {
            "name": "DaemonsMCP",
            "description": "DaemonsMCP in a sandbox",
            "path": "C:\\MCPSandbox\\DaemonsMCP",
            "enabled": true
        }
    ],
    "security": {
        "blockedExtensions": [
            ".exe",
            ".dll",
            ".bat",
            ".cmd",
            ".sh",
            ".key",
            ".pem",
            ".p12",
            ".pfx",
            ".crt",
            ".cer",
            ".db",
            ".sqlite",
            ".sqlite3"            
        ],
        "allowedExtensions": [
            ".sln",
            ".csproj",
            ".cs",
            ".sql",
            ".html",
            ".htm",
            ".js",
            ".py",
            ".md",
            ".txt",
            ".json",
            ".resx",
            ".log"
        ],
        "maxFileSize": "10MB",
        "allowWrite": true,
        "writeProtectedPaths": [
            ".git",
            ".vs",
            "bin",
            "obj",
            "node_modules",
            ".ssh"
        ],
        "maxFileWriteSize": "5MB"
    }
}